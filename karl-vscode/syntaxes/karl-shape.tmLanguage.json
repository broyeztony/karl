{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Karl Shape",
    "scopeName": "source.karl.shape",
    "patterns": [
        { "include": "#comments" },
        { "include": "#declarations" },
        { "include": "#fields" },
        { "include": "#types" },
        { "include": "#punctuation" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.karl",
                    "match": "//.*$"
                }
            ]
        },
        "declarations": {
            "patterns": [
                {
                    "name": "meta.shape.declaration.karl",
                    "match": "^\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*:",
                    "captures": {
                        "1": { "name": "entity.name.type.karl" }
                    }
                }
            ]
        },
        "fields": {
            "patterns": [
                {
                    "name": "meta.shape.field.karl",
                    "match": "^\\s*([+-])\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*(\\(([^)]*)\\))?\\s*:",
                    "captures": {
                        "1": { "name": "keyword.operator.karl" },
                        "2": { "name": "variable.other.member.karl" },
                        "4": { "name": "string.quoted.other.karl" }
                    }
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.karl",
                    "match": "\\b(string|int|float|bool|null|any|object)\\b"
                },
                {
                    "name": "entity.name.type.karl",
                    "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*(\\[\\])?)"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.separator.colon.karl",
                    "match": ":"
                },
                {
                    "name": "punctuation.section.brackets.karl",
                    "match": "[\\[\\]]"
                },
                {
                    "name": "punctuation.section.parens.karl",
                    "match": "[()]"
                }
            ]
        }
    }
}
