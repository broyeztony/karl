{
    "name": "karl-lang",
    "displayName": "Karl Language Support",
    "description": "Syntax highlighting and language support for the Karl programming language",
    "version": "0.1.1",
    "publisher": "karl-lang",
    "icon": "images/karl-icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/karl-vscode"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "karl",
        "concurrent",
        "functional",
        "programming"
    ],
    "contributes": {
        "languages": [
            {
                "id": "karl",
                "aliases": [
                    "Karl",
                    "karl"
                ],
                "extensions": [
                    ".k"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "karl-shape",
                "aliases": [
                    "Karl Shape",
                    "karl-shape"
                ],
                "extensions": [
                    ".shape"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "karl",
                "scopeName": "source.karl",
                "path": "./syntaxes/karl.tmLanguage.json"
            },
            {
                "language": "karl-shape",
                "scopeName": "source.karl.shape",
                "path": "./syntaxes/karl-shape.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "vsce": "^2.15.0"
    }
}
